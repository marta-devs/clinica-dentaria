generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Paciente {
  id        Int       @id @default(autoincrement())
  nome      String
  data_nasc String
  sexo      String
  telefone  String
  email     String
  endereco  String
  Usuario   Usuario[]
}

model Usuario {
  id         String   @id @default(uuid())
  cargo      String
  senha      String
  pacienteId Int
  paciente   Paciente @relation(fields: [pacienteId], references: [id])
}
